@using Microsoft.AspNetCore.Identity
@using InformacioniSistemTeretane.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@functions {
    bool IsActive(params string[] controllers) {
        var current = ViewContext.RouteData.Values["controller"]?.ToString();
        return controllers.Contains(current);
    }
    
    async Task<bool> IsInRole(string role) => 
        SignInManager.IsSignedIn(User) && 
        await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), role);
}

<!DOCTYPE html>
<html lang="bs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – GymChain IST</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.lux.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">    
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@if (ViewData["Title"]?.ToString() == "Početna stranica")
{
    <style>
        .feature-section {
            margin: 3rem 0;
            padding: 2rem 0;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
        }
        .section-title {
            position: relative;
            margin-bottom: 2rem;
            padding-bottom: 0.5rem;
            text-align: center;
        }
        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, #007bff, #00bfff);
        }
    </style>
}
    
    @if (SignInManager.IsSignedIn(User)) {
        <link rel="icon" href="~/favicon-auth.ico" type="image/x-icon">
    } else {
        <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    }

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-activity me-2"></i> GymChain IST
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("Zaposlenik") || User.IsInRole("Admin")) {
                            <li class="nav-item dropdown @(IsActive("Klijenti", "Paketi", "Uplate") ? "active" : "")">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-cash-coin me-1"></i> Finansije
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Klijenti" asp-action="Index"><i class="bi bi-people me-2"></i>Klijenti</a></li>
                                    <li><a class="dropdown-item" asp-controller="Paketi" asp-action="Index"><i class="bi bi-wallet me-2"></i>Paketi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Uplate" asp-action="Index"><i class="bi bi-credit-card me-2"></i>Članarine</a></li>
                                </ul>
                            </li>
                        }
                        
                        @if (SignInManager.IsSignedIn(User)) {
                            <li class="nav-item dropdown @(IsActive("Treninzi", "GrupniTreninzi", "PersonalniTreninzi", "ProbniTreninzi") ? "active" : "")">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-calendar-check me-1"></i> Treninzi
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Treneri" asp-action="Index"><i class="bi bi-list-check me-2"></i>Treneri</a></li>
                                    <li><a class="dropdown-item" asp-controller="Treninzi" asp-action="Index"><i class="bi bi-list-check me-2"></i>Sve vrste</a></li>
                                    <li><a class="dropdown-item" asp-controller="GrupniTreninzi" asp-action="Index"><i class="bi bi-people-fill me-2"></i>Grupni</a></li>
                                    <li><a class="dropdown-item" asp-controller="PersonalniTreninzi" asp-action="Index"><i class="bi bi-person-badge-fill me-2"></i>Personalni</a></li>
                                    <li><a class="dropdown-item" asp-controller="ProbniTreninzi" asp-action="Index"><i class="bi bi-clock-fill me-2"></i>Probni</a></li>
                                </ul>
                            </li>
                            
                            <li class="nav-item dropdown @(IsActive("Igraonice", "IgraonicaPonude") ? "active" : "")">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-joystick me-1"></i> Igraonice
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Igraonice" asp-action="Index"><i class="bi bi-eye-fill me-2"></i>Pregled</a></li>
                                    <li><a class="dropdown-item" asp-controller="IgraonicaPonude" asp-action="Index"><i class="bi bi-tag-fill me-2"></i>Ponude</a></li>
                                </ul>
                            </li>
                            
                            <li class="nav-item dropdown @(IsActive("Takmicenja", "Discipline", "Takmicari") ? "active" : "")">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-trophy me-1"></i> Takmičenja
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Takmicenja" asp-action="Index"><i class="bi bi-trophy-fill me-2"></i>Takmičenja</a></li>
                                    <li><a class="dropdown-item" asp-controller="Discipline" asp-action="Index"><i class="bi bi-list-task me-2"></i>Discipline</a></li>
                                    <li><a class="dropdown-item" asp-controller="Takmicari" asp-action="Index"><i class="bi bi-people-fill me-2"></i>Takmičari</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sudije" asp-action="Index"><i class="bi bi-people-fill me-2"></i>Sudije</a></li>
                                </ul>
                            </li>
                        }
                        
                        @if (User.IsInRole("Admin")) {
                            <li class="nav-item dropdown @(IsActive("Lokacije", "Sale", "Zaposlenici", "Licenca", "LicencniProgrami") ? "active" : "")">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear me-1"></i> Administracija
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Lokacije" asp-action="Index"><i class="bi bi-geo-alt-fill me-2"></i>Lokacije</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sale" asp-action="Index"><i class="bi bi-building me-2"></i>Sale</a></li>
                                    <li><a class="dropdown-item" asp-controller="Zaposlenici" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Zaposlenici</a></li>
                                    <li><a class="dropdown-item" asp-controller="Licence" asp-action="Index"><i class="bi bi-award-fill me-2"></i>Licence</a></li>
                                    <li><a class="dropdown-item" asp-controller="LicencniProgrami" asp-action="Index"><i class="bi bi-code-slash me-2"></i>Programi</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-fill container">
        @RenderBody()
    </main>

    <footer class="mt-auto py-3 bg-light border-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start text-center">
                    &copy; @DateTime.Now.Year – GymChain IST
                </div>
                <div class="col-md-6 text-md-end text-center mt-2 mt-md-0">
                    @if (SignInManager.IsSignedIn(User)) {
                        <span class="text-muted">
                            Prijavljeni korisnik: 
                            <span class="fw-bold text-primary">
                                @User.Identity?.Name
                            </span>
                        </span>
                    }
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>