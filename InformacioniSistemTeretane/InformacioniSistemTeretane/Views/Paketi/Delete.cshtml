@model InformacioniSistemTeretane.Models.Paket

@{
    ViewData["Title"] = "Obriši paket";
    bool imaUplata = ViewData["ImaUplata"] as bool? ?? false;
    int brojUplata = ViewData["BrojUplata"] as int? ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <!-- Prijak poruka -->
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Potvrda brisanja</h5>
        </div>
        <div class="card-body">
            <h3 class="text-danger">Jeste li sigurni da želite obrisati ovaj paket?</h3>

            @if (imaUplata)
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading">Upozorenje!</h5>
                    <p class="mb-0">Ovaj paket ima @brojUplata vezanih uplata. Brisanje nije moguće dok postoje uplate.</p>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h5 class="alert-heading">Upozorenje!</h5>
                    <p class="mb-0">Ova akcija je nepovratna i trajno će obrisati paket.</p>
                </div>
            }

            <dl class="row mt-4">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Naziv)</dt>
                <dd class="col-sm-8">@Model.Naziv</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Cijena)</dt>
                <dd class="col-sm-8">@Model.Cijena.ToString("C")</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TrajanjeDana)</dt>
                <dd class="col-sm-8">@Model.TrajanjeDana dana</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    @if (!imaUplata)
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Potvrdi brisanje
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger disabled" disabled>
                            <i class="fas fa-ban"></i> Brisanje onemogućeno
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>