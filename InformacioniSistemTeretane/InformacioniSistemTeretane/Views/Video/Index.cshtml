@model IEnumerable<InformacioniSistemTeretane.Models.VideoSadrzaj>

@{
    ViewData["Title"] = "Video Sadržaji";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (TempData["Uspjeh"] != null)
    {
        <div class="alert alert-success">@TempData["Uspjeh"]</div>
    }

    <div class="row">
        @foreach (var video in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item"
                                src="https://www.youtube.com/embed/@video.YouTubeVideoId"
                                allowfullscreen></iframe>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@video.Naziv</h5>
                        <p class="card-text text-muted small">
                            <i class="fas fa-calendar-alt"></i> @video.DatumDodavanja.ToString("dd.MM.yyyy")
                        </p>
                        @if (!string.IsNullOrEmpty(video.Opis))
                        {
                            <p class="card-text">@video.Opis</p>
                        }
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-action="Embed" asp-route-id="@video.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-code"></i> Ugradi kod
                        </a>
                        <button class="btn btn-sm btn-outline-secondary copy-btn"
                                data-embed='<iframe width="560" height="315" src="https://www.youtube.com/embed/@video.YouTubeVideoId" frameborder="0" allowfullscreen></iframe>'>
                            <i class="fas fa-copy"></i> Kopiraj
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .card {
            transition: transform 0.3s;
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            }

        .embed-responsive {
            border-radius: 0.25rem 0.25rem 0 0;
            overflow: hidden;
        }

        .copy-btn {
            position: relative;
        }

            .copy-btn::after {
                content: "Kopirano!";
                position: absolute;
                top: -30px;
                left: 50%;
                transform: translateX(-50%);
                background: #333;
                color: white;
                padding: 3px 8px;
                border-radius: 3px;
                font-size: 12px;
                opacity: 0;
                transition: opacity 0.3s;
            }

            .copy-btn.copied::after {
                opacity: 1;
            }
    </style>
}

@section Scripts {
    <script>
        document.querySelectorAll('.copy-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const embedCode = this.getAttribute('data-embed');
                navigator.clipboard.writeText(embedCode);

                this.classList.add('copied');
                setTimeout(() => {
                    this.classList.remove('copied');
                }, 2000);
            });
        });
    </script>
}