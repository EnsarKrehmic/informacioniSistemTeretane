@model InformacioniSistemTeretane.Models.PrijavljeniGrupni

@{
    ViewData["Title"] = "Uredi prijavu";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <!-- Prikaz poruka -->
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Uređivanje prijave</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="GrupniTreningId" class="form-label required"></label>
                        <select asp-for="GrupniTreningId" class="form-select" asp-items="ViewBag.GrupniTreningId">
                            <option value="">Odaberite grupni trening</option>
                        </select>
                        <span asp-validation-for="GrupniTreningId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="KlijentId" class="form-label required"></label>
                        <select asp-for="KlijentId" class="form-select" asp-items="ViewBag.KlijentId">
                            <option value="">Odaberite klijenta</option>
                        </select>
                        <span asp-validation-for="KlijentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Prisutan" class="form-label"></label>
                        <div class="form-check">
                            <input asp-for="Prisutan" class="form-check-input" />
                            <label class="form-check-label" asp-for="Prisutan">Prisutan na treningu</label>
                        </div>
                        <span asp-validation-for="Prisutan" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="VrijemeDolaska" class="form-label"></label>
                        <input asp-for="VrijemeDolaska" type="time" class="form-control" />
                        <span asp-validation-for="VrijemeDolaska" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Spremi promjene
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}