@model InformacioniSistemTeretane.Models.PrijavljeniGrupni

@{
    ViewData["Title"] = "Detalji prijave";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Detalji prijave</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Prijava za grupni trening</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Grupni trening</dt>
                <dd class="col-sm-8">@Model.GrupniTrening?.Naziv</dd>

                <dt class="col-sm-4">Klijent</dt>
                <dd class="col-sm-8">@Model.Klijent?.Prezime, @Model.Klijent?.Ime</dd>

                <dt class="col-sm-4">Prisutan</dt>
                <dd class="col-sm-8">@(Model.Prisutan ? "Da" : "Ne")</dd>

                <dt class="col-sm-4">Vrijeme dolaska</dt>
                <dd class="col-sm-8">@Model.VrijemeDolaska.ToString("HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-end">
                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit"></i> Uredi
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Obriši
                    </a>
                }
            </div>
        </div>
    </div>
</div>