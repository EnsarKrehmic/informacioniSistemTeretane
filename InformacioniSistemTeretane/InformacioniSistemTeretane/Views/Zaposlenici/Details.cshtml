@model InformacioniSistemTeretane.Models.Zaposlenik

@{
    ViewData["Title"] = "Detalji zaposlenika";
}

@if (TempData["Uspjeh"] != null)
{
    <div class="alert alert-success">@TempData["Uspjeh"]</div>
}
@if (TempData["Greska"] != null)
{
    <div class="alert alert-danger">@TempData["Greska"]</div>
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">Ime</dt>
    <dd class="col-sm-9">@Model.Ime</dd>

    <dt class="col-sm-3">Prezime</dt>
    <dd class="col-sm-9">@Model.Prezime</dd>

    <dt class="col-sm-3">Pozicija</dt>
    <dd class="col-sm-9">@Model.Pozicija</dd>

    <dt class="col-sm-3">Telefon</dt>
    <dd class="col-sm-9">@Model.Telefon</dd>

    <dt class="col-sm-3">Korisnički nalog</dt>
    <dd class="col-sm-9">@(Model.User?.UserName ?? "Nepoznato")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Uredi</a>
    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
</div>