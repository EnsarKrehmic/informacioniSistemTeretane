@model ProbniTrening

@{
    ViewData["Title"] = "Obriši probni trening";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Nazad na listu
        </a>
    </div>

    @if (TempData["Uspjeh"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Uspjeh"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="alert alert-danger">
        <h5 class="alert-heading">
            <i class="fas fa-exclamation-triangle me-2"></i> Upozorenje!
        </h5>
        <p class="mb-0">
            Jeste li sigurni da želite obrisati ovaj probni trening? Ova radnja je nepovratna.
        </p>
    </div>

    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="h5 mb-0">@Model.Naziv</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Datum treninga:</dt>
                <dd class="col-sm-8">@Model.Datum.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-4">Klijent:</dt>
                <dd class="col-sm-8">@Model.Klijent?.Prezime</dd>

                <dt class="col-sm-4">Trener:</dt>
                <dd class="col-sm-8">@Model.Trener?.Zaposlenik?.Ime @Model.Trener?.Zaposlenik?.Prezime</dd>

                <dt class="col-sm-4">Ocjena:</dt>
                <dd class="col-sm-8">
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star @(i <= Model.Ocjena ? "text-warning" : "text-muted")"></i>
                        }
                    </div>
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Potvrdi brisanje
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i> Odustani
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .rating {
        color: #ccc;
        font-size: 1.2rem;
    }

        .rating .text-warning {
            color: #f8ce0b !important;
        }
</style>