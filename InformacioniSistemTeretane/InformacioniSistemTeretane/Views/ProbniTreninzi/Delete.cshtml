@model InformacioniSistemTeretane.Models.ProbniTrening

<h1>Obriši probni trening</h1>
<h3>Jeste li sigurni?</h3>

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Naziv)</dt>
    <dd class="col-sm-9">@Model.Naziv</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.KlijentId)</dt>
    <dd class="col-sm-9">@Model.Klijent?.Prezime, @Model.Klijent?.Ime</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.TrenerId)</dt>
    <dd class="col-sm-9">@Model.Trener?.Zaposlenik?.Prezime, @Model.Trener?.Zaposlenik?.Ime</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Datum)</dt>
    <dd class="col-sm-9">@Model.Datum.ToShortDateString()</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Ocjena)</dt>
    <dd class="col-sm-9">@Model.Ocjena</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
</form>
