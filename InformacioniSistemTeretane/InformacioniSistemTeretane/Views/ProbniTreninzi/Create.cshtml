@model ProbniTrening

@{
    ViewData["Title"] = "Dodaj novi probni trening";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Nazad na listu
        </a>
    </div>

    @if (TempData["Uspjeh"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Uspjeh"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">Kreiraj novi trening</h2>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Naziv" class="form-label"></label>
                        <input asp-for="Naziv" class="form-control"
                               placeholder="Unesite naziv treninga" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Ocjena" class="form-label"></label>
                        <select asp-for="Ocjena" class="form-select">
                            <option value="">Odaberite ocjenu</option>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <option value="@i">@i zvjezdica</option>
                            }
                        </select>
                        <span asp-validation-for="Ocjena" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="KlijentId" class="form-label"></label>
                        <select asp-for="KlijentId" class="form-select"
                                asp-items="ViewBag.KlijentId">
                            <option value="">Odaberite klijenta</option>
                        </select>
                        <span asp-validation-for="KlijentId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TrenerId" class="form-label"></label>
                        <select asp-for="TrenerId" class="form-select"
                                asp-items="ViewBag.TrenerId">
                            <option value="">Odaberite trenera</option>
                        </select>
                        <span asp-validation-for="TrenerId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Datum" class="form-label"></label>
                        <input asp-for="Datum" class="form-control"
                               placeholder="dd.mm.gggg hh:mm" />
                        <span asp-validation-for="Datum" class="text-danger"></span>
                    </div>

                    <div class="col-12 mb-3">
                        <label asp-for="Opis" class="form-label"></label>
                        <textarea asp-for="Opis" class="form-control" rows="4"
                                  placeholder="Detaljan opis probnog treninga..."></textarea>
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Kreiraj trening
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i> Odustani
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-label.required:after {
        content: " *";
        color: #dc3545;
    }
</style>