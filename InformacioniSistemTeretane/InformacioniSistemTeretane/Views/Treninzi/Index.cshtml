@model IEnumerable<InformacioniSistemTeretane.Models.Trening>

@{
    ViewData["Title"] = "Treninzi";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Naziv)</th>
            <th>@Html.DisplayNameFor(m => m.First().Opis)</th>
            <th>@Html.DisplayNameFor(m => m.First().VrstaTreninga)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Naziv</td>
                <td>@t.Opis</td>
                <td>@t.VrstaTreninga</td>
                <td>
                    <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-info">Detalji</a>
                </td>
            </tr>
        }
    </tbody>
</table>
