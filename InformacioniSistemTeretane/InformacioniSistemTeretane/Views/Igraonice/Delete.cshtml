@model InformacioniSistemTeretane.Models.Igraonica

<h1>Obriši igraonicu</h1>
<h3>Jeste li sigurni?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Naziv)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Naziv)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Kapacitet)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Kapacitet)</dd>
        <dt class="col-sm-4">Lokacija</dt>
        <dd class="col-sm-8">@Model.Lokacija?.Naziv</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
</form>