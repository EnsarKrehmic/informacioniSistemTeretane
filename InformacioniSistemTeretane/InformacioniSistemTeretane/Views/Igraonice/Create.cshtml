@model InformacioniSistemTeretane.Models.Igraonica

@{
    ViewData["Title"] = "Nova igraonica";
}

<div class="card shadow border-0">
    <div class="card-header bg-primary text-white py-3">
        <h2 class="mb-0">
            <i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        @if (TempData["Greska"] != null)
        {
            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Greska"]
            </div>
        }

        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Naziv" class="form-label fw-bold"></label>
                        <input asp-for="Naziv" class="form-control" placeholder="Unesite naziv igraonice" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Kapacitet" class="form-label fw-bold"></label>
                        <input asp-for="Kapacitet" type="number" class="form-control"
                               min="1" max="100" placeholder="Unesite kapacitet" />
                        <span asp-validation-for="Kapacitet" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="LokacijaId" class="form-label fw-bold">Lokacija</label>
                        <select asp-for="LokacijaId" class="form-select"
                                asp-items="ViewBag.LokacijaId">
                            <option value="">-- Odaberite lokaciju --</option>
                        </select>
                        <span asp-validation-for="LokacijaId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i>Kreiraj igraonicu
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-x-circle me-2"></i>Odustani
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}