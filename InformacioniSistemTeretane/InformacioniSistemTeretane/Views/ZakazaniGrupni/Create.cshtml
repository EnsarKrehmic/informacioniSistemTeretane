@model InformacioniSistemTeretane.Models.ZakazaniGrupni

@{
    ViewData["Title"] = "Dodaj novu rezervaciju";
}

@if (TempData["Greska"] != null)
{
    <div class="alert alert-danger">@TempData["Greska"]</div>
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label class="control-label">Klijent</label>
        <select asp-for="KlijentId" class="form-control" asp-items="ViewBag.KlijentId">
            <option value="">-- Odaberite klijenta --</option>
        </select>
        <span asp-validation-for="KlijentId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Grupni trening</label>
        <select asp-for="GrupniTreningId" class="form-control" asp-items="ViewBag.GrupniTreningId">
            <option value="">-- Odaberite trening --</option>
        </select>
        <span asp-validation-for="GrupniTreningId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DatumPrijave" class="control-label"></label>
        <input asp-for="DatumPrijave" type="date" class="form-control" />
        <span asp-validation-for="DatumPrijave" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-calendar-plus"></i> Zakazi
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>
</form>