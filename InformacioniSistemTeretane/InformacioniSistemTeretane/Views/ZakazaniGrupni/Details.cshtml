@model InformacioniSistemTeretane.Models.ZakazaniGrupni

@{
    ViewData["Title"] = "Detalji rezervacije";
}

@if (TempData["Uspjeh"] != null)
{
    <div class="alert alert-success">@TempData["Uspjeh"]</div>
}
@if (TempData["Greska"] != null)
{
    <div class="alert alert-danger">@TempData["Greska"]</div>
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-3">Klijent</dt>
    <dd class="col-sm-9">@(Model.Klijent?.Ime) @(Model.Klijent?.Prezime ?? "Nepoznato")</dd>

    <dt class="col-sm-3">Trening</dt>
    <dd class="col-sm-9">@(Model.GrupniTrening?.Naziv ?? "Nepoznato")</dd>

    <dt class="col-sm-3">Datum treninga</dt>
    <dd class="col-sm-9">@(Model.GrupniTrening?.Datum.ToString("dd.MM.yyyy") ?? "Nepoznato")</dd>

    <dt class="col-sm-3">Vrijeme treninga</dt>
    <dd class="col-sm-9">@(Model.GrupniTrening?.Vrijeme.ToString(@"hh\:mm") ?? "Nepoznato")</dd>

    <dt class="col-sm-3">Datum prijave</dt>
    <dd class="col-sm-9">@Model.DatumPrijave.ToString("dd.MM.yyyy")</dd>
</dl>

<div class="mt-3">
    @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Uredi</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
</div>