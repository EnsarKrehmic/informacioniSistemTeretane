@model InformacioniSistemTeretane.Models.ZakazaniGrupni
@{
    ViewData["Title"] = "Uredi rezervaciju";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="GrupniTreningId"></label>
        <select asp-for="GrupniTreningId" class="form-control" asp-items="ViewBag.GrupniTreningId"></select>
        <span asp-validation-for="GrupniTreningId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="KlijentId"></label>
        <select asp-for="KlijentId" class="form-control" asp-items="ViewBag.KlijentId"></select>
        <span asp-validation-for="KlijentId" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="DatumPrijave"></label>
        <input asp-for="DatumPrijave" type="date" class="form-control" />
        <span asp-validation-for="DatumPrijave" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spremi</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
