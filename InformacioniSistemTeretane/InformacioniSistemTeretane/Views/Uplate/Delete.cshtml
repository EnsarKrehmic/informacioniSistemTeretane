@model InformacioniSistemTeretane.Models.Uplata

@{
    ViewData["Title"] = "Obriši uplatu";
}

@if (TempData["Greska"] != null)
{
    <div class="alert alert-danger">@TempData["Greska"]</div>
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Jeste li sigurni da želite obrisati ovu uplatu?</h3>
<div class="mt-4">
    <dl class="row border p-3">
        <dt class="col-sm-4">Klijent</dt>
        <dd class="col-sm-8">@(Model.Klijent?.Ime) @(Model.Klijent?.Prezime ?? "Nepoznato")</dd>

        <dt class="col-sm-4">Paket</dt>
        <dd class="col-sm-8">@(Model.Paket?.Naziv ?? "Nepoznato")</dd>

        <dt class="col-sm-4">Datum uplate</dt>
        <dd class="col-sm-8">@Model.DatumUplate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-4">Način uplate</dt>
        <dd class="col-sm-8">@Model.NacinUplate</dd>

        <dt class="col-sm-4">Iznos (KM)</dt>
        <dd class="col-sm-8">@Model.Iznos.ToString("0.00")</dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Obriši
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Odustani
        </a>
    </form>
</div>