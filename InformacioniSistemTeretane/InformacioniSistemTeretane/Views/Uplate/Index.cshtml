@model IEnumerable<InformacioniSistemTeretane.Models.Uplata>
@using InformacioniSistemTeretane.Models

<h1>Uplate</h1>
<p><a asp-action="Create" class="btn btn-primary">Nova uplata</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor((Uplata m) => m.KlijentId)</th>
            <th>Klijent</th>
            <th>@Html.DisplayNameFor((Uplata m) => m.PaketId)</th>
            <th>Paket</th>
            <th>@Html.DisplayNameFor((Uplata m) => m.DatumUplate)</th>
            <th>@Html.DisplayNameFor((Uplata m) => m.NacinUplate)</th>
            <th>@Html.DisplayNameFor((Uplata m) => m.Iznos)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.KlijentId</td>
                <td>@item.Klijent?.Prezime, @item.Klijent?.Ime</td>
                <td>@item.PaketId</td>
                <td>@item.Paket?.Naziv</td>
                <td>@item.DatumUplate.ToShortDateString()</td>
                <td>@Html.DisplayFor(mi => item.NacinUplate)</td>
                <td>@Html.DisplayFor(mi => item.Iznos)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
