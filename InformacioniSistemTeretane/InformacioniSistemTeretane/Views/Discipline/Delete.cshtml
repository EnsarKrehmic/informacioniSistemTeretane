@model InformacioniSistemTeretane.Models.Disciplina

@{
    ViewData["Title"] = "Obriši disciplinu";
}

<div class="card shadow border-0">
    <div class="card-header bg-danger text-white py-3">
        <h2 class="mb-0">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        @if (TempData["Greska"] != null)
        {
            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Greska"]
            </div>
        }

        <div class="alert alert-warning">
            <h5 class="alert-heading">Upozorenje!</h5>
            <p class="mb-0">
                Jeste li sigurni da želite obrisati ovu disciplinu? Ova radnja je nepovratna.
            </p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Takmičenje</dt>
                    <dd class="col-sm-8">@Model.Takmicenje?.Naziv</dd>

                    <dt class="col-sm-4">Naziv discipline</dt>
                    <dd class="col-sm-8">@Model.Naziv</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Maks. učesnika</dt>
                    <dd class="col-sm-8">@Model.MaxUcesnika</dd>

                    <dt class="col-sm-4">Trenutno učesnika</dt>
                    <dd class="col-sm-8">@Model.Takmicari?.Count</dd>
                </dl>
            </div>
        </div>

        @if (Model.Takmicari != null && Model.Takmicari.Any())
        {
            <div class="alert alert-danger mt-4">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>Ova disciplina ima pridružene takmičare!
                </h6>
                <p class="mb-0">
                    Brisanje nije moguće dok postoje aktivni takmičari.
                    Molimo prvo uklonite sve takmičare prije brisanja discipline.
                </p>
            </div>
        }
    </div>
    <div class="card-footer bg-light">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Nazad na listu
                </a>

                @if (Model.Takmicari == null || !Model.Takmicari.Any())
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Potvrdi brisanje
                    </button>
                }
            </div>
        </form>
    </div>
</div>