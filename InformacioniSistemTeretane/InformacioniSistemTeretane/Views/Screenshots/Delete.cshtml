@model InformacioniSistemTeretane.Models.Screenshot

@{
    ViewData["Title"] = "Obriši screenshot";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="alert alert-warning">
        <h4>Da li ste sigurni da želite obrisati ovaj screenshot?</h4>
        <p>Ova akcija je nepovratna!</p>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.Opis" class="img-fluid rounded" alt="@Model.Naziv">
                </div>
                <div class="col-md-8">
                    <h4>@Model.Naziv</h4>
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Datum kreiranja:</dt>
                        <dd class="col-sm-8">@Model.DatumKreiranja.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Obriši
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Nazad na listu
                </a>
            </form>
        </div>
    </div>
</div>