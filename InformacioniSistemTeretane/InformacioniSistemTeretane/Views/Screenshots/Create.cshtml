@model InformacioniSistemTeretane.Models.Screenshot

@{
    ViewData["Title"] = "Dodaj novi screenshot";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DatotekaSlike" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="DatotekaSlike" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Odaberite sliku</label>
                    </div>
                    <span asp-validation-for="DatotekaSlike" class="text-danger"></span>
                    <small class="form-text text-muted">Dozvoljeni formati: JPG, JPEG, PNG (max 5MB)</small>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Sačuvaj
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Odustani
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Prikaz naziva odabrane datoteke
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}