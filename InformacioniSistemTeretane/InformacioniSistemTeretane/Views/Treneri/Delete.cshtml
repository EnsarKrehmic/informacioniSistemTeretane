@model InformacioniSistemTeretane.Models.Trener

@{
    ViewData["Title"] = "Obriši trenera";
}

<h1>@ViewData["Title"]</h1>
<h3>Jeste li sigurni?</h3>

<dl class="row">
    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.ZaposlenikId)</dt>
    <dd class="col-sm-8">@Model.Zaposlenik?.Prezime, @Model.Zaposlenik?.Ime</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
</form>
