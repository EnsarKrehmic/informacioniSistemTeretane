@model IEnumerable<InformacioniSistemTeretane.Models.Trener>
@using InformacioniSistemTeretane.Models

<h1>Treneri</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novi trener</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor((Trener m) => m.ZaposlenikId)</th>
            <th>Zaposlenik</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ZaposlenikId</td>
                <td>@item.Zaposlenik?.Prezime, @item.Zaposlenik?.Ime</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
