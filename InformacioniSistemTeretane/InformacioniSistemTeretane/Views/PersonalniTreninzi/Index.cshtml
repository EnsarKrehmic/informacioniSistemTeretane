@model IEnumerable<InformacioniSistemTeretane.Models.PersonalniTrening>

@{
    ViewData["Title"] = "Personalni treninzi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Personalni treninzi</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Novi trening
            </a>
        }
    </div>

    <!-- Prikaz poruka -->
    @if (TempData["Uspjeh"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Uspjeh"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Lista personalnih treninga</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">Nema zakazanih personalnih treninga</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Naziv</th>
                                <th>Trener</th>
                                <th>Klijent</th>
                                <th>Datum</th>
                                <th>Vrijeme</th>
                                <th class="text-center">Akcije</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var prosaoTrening = item.Datum < DateTime.Today ||
                                (item.Datum == DateTime.Today &&
                                item.Vrijeme < DateTime.Now.TimeOfDay);
                                var badgeClass = prosaoTrening ? "badge bg-secondary" : "badge bg-success";
                                var status = prosaoTrening ? "Održan" : "Zakazan";

                                <tr>
                                    <td>@item.Naziv</td>
                                    <td>@item.Trener?.Zaposlenik?.Prezime, @item.Trener?.Zaposlenik?.Ime</td>
                                    <td>@item.Klijent?.Prezime, @item.Klijent?.Ime</td>
                                    <td>@item.Datum.ToShortDateString()</td>
                                    <td>@item.Vrijeme.ToString(@"hh\:mm")</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mx-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>