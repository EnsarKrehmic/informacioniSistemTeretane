@model IEnumerable<InformacioniSistemTeretane.Models.PersonalniTrening>
@using InformacioniSistemTeretane.Models

<h1>Personalni treninzi</h1>
<p><a asp-action="Create" class="btn btn-primary">Novi personalni trening</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor((PersonalniTrening m) => m.Naziv)</th>
            <th>@Html.DisplayNameFor((PersonalniTrening m) => m.Klijent.Prezime)</th>
            <th>@Html.DisplayNameFor((PersonalniTrening m) => m.Trener.Zaposlenik.Prezime)</th>
            <th>@Html.DisplayNameFor((PersonalniTrening m) => m.Datum)</th>
            <th>@Html.DisplayNameFor((PersonalniTrening m) => m.Vrijeme)</th>
            <th>@Html.DisplayNameFor((PersonalniTrening m) => m.Napredak)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Naziv</td>
                <td>@item.Klijent?.Prezime, @item.Klijent?.Ime</td>
                <td>@item.Trener?.Zaposlenik?.Prezime, @item.Trener?.Zaposlenik?.Ime</td>
                <td>@item.Datum.ToShortDateString()</td>
                <td>@item.Vrijeme.ToString(@"hh\:mm")</td>
                <td>@item.Napredak</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
