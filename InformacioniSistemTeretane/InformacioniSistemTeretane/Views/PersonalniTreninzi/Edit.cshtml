@model InformacioniSistemTeretane.Models.PersonalniTrening

@{
    ViewData["Title"] = "Uredi personalni trening";
    bool prosaoTrening = Model.Datum < DateTime.Today || 
                         (Model.Datum == DateTime.Today && 
                          Model.Vrijeme < DateTime.Now.TimeOfDay);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <!-- Prikaz poruka -->
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Uređivanje treninga: @Model.Naziv</h5>
            @if (prosaoTrening)
            {
                <span class="badge bg-secondary">Održan</span>
            }
            else
            {
                <span class="badge bg-success">Zakazan</span>
            }
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <!-- Hidden za obaveznu vrstu treninga: -->
                <input type="hidden" asp-for="VrstaTreninga"/>
                <span asp-validation-for="VrstaTreninga" class="text-danger"></span>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Naziv" class="form-label required"></label>
                        <input asp-for="Naziv" class="form-control" placeholder="Unesite naziv treninga" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Opis" class="form-label"></label>
                        <textarea asp-for="Opis" class="form-control" placeholder="Unesite opis treninga" rows="3"></textarea>
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="TrenerId" class="form-label required"></label>
                        <select asp-for="TrenerId" class="form-select" asp-items="ViewBag.TrenerId">
                            <option value="">Odaberite trenera</option>
                        </select>
                        <span asp-validation-for="TrenerId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="KlijentId" class="form-label required"></label>
                        <select asp-for="KlijentId" class="form-select" asp-items="ViewBag.KlijentId">
                            <option value="">Odaberite klijenta</option>
                        </select>
                        <span asp-validation-for="KlijentId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Datum" class="form-label required"></label>
                        <input asp-for="Datum" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")"
                            disabled="@(prosaoTrening ? "disabled" : null)" />
                        <span asp-validation-for="Datum" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Vrijeme" class="form-label required"></label>
                        <input asp-for="Vrijeme" type="time" class="form-control"
                            disabled="@(prosaoTrening ? "disabled" : null)" />
                        <span asp-validation-for="Vrijeme" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Napredak" class="form-label"></label>
                        <textarea asp-for="Napredak" class="form-control" placeholder="Unesite napredak klijenta" rows="2"></textarea>
                        <span asp-validation-for="Napredak" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Spremi promjene
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}