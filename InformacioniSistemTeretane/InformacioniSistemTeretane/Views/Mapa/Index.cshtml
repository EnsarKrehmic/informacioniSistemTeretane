@model IEnumerable<Mapa>

@{
    ViewData["Title"] = "Upravljanje Lokacijama";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Dodaj Novu Lokaciju
        </a>
    </div>

    @if (TempData["Uspjeh"] != null)
    {
        <div class="alert alert-success">@TempData["Uspjeh"]</div>
    }
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger">@TempData["Greska"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Naziv</th>
                            <th>Adresa</th>
                            <th>Tip</th>
                            <th>Koordinate</th>
                            <th>Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Naziv</td>
                                <td>@item.Adresa</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @item.Tip.ToString()
                                    </span>
                                </td>
                                <td>
                                    <span class="text-muted">
                                        @item.Latitude.ToString("F4"), @item.Longitude.ToString("F4")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary" title="Prikaži">
                                            <i class="fas fa-map-marker-alt"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary" title="Uredi">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger" title="Obriši">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>