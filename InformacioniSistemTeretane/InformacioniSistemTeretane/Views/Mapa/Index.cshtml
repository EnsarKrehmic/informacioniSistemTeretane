@model Mapa

<div id="mapContainer" style="width: 100%; height: 500px;"></div>

@section Scripts {
    <script src="https://js.api.here.com/v3/3.1/mapsjs-core.js"></script>
    <script src="https://js.api.here.com/v3/3.1/mapsjs-service.js"></script>
    <script>
        const API_KEY = 'VAŠ_API_KLJUČ'; // Zamijenite sa stvarnim ključem
        const lat = @Model.Latitude;
        const lng = @Model.Longitude;

        function initMap() {
            const platform = new H.service.Platform({ apikey: API_KEY });
            const map = new H.Map(
                document.getElementById('mapContainer'),
                platform.createDefaultLayers().vector.normal.map,
                { center: { lat, lng }, zoom: 15 }
            );

            new H.map.Marker({ lat, lng }).addTo(map);
        }

        window.onload = initMap;
    </script>
}