@model Takmicenje

@{
    ViewData["Title"] = "Detalji takmičenja";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Nazad na listu
        </a>
    </div>

    @if (TempData["Uspjeh"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Uspjeh"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Greska"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Greska"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h2 class="h5 mb-0">@Model.Naziv</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Datum:</dt>
                <dd class="col-sm-9">@Model.Datum.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-3">Lokacija:</dt>
                <dd class="col-sm-9">@Model.Lokacija?.Naziv</dd>

                <dt class="col-sm-3">Kotizacija:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Kotizacija) KM</dd>

                <dt class="col-sm-3">Opis:</dt>
                <dd class="col-sm-9">@Model.Opis</dd>

                <dt class="col-sm-3">Discipline:</dt>
                <dd class="col-sm-9">
                    @if (Model.Discipline?.Any() == true)
                    {
                        <ul class="list-group">
                            @foreach (var disciplina in Model.Discipline)
                            {
                                <li class="list-group-item">@disciplina.Naziv</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">Nema disciplina</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <div>
                    @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id"
                           class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i> Uredi
                        </a>
                    }
                </div>
                <div>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id"
                           class="btn btn-danger">
                            <i class="fas fa-trash-alt me-1"></i> Obriši
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>