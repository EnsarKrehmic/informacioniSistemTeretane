@model InformacioniSistemTeretane.Models.Takmicenje

<h1>Detalji takmičenja</h1>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Naziv)</dt>
            <dd class="col-sm-8">@Model.Naziv</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Datum)</dt>
            <dd class="col-sm-8">@Model.Datum.ToShortDateString()</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.LokacijaId)</dt>
            <dd class="col-sm-8">@Model.Lokacija?.Naziv</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Kotizacija)</dt>
            <dd class="col-sm-8">@Model.Kotizacija.ToString("C")</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Opis)</dt>
            <dd class="col-sm-8">@Model.Opis</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <h4>Discipline</h4>
    @if (Model.Discipline.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Naziv discipline")</th>
                    <th>@Html.DisplayName("Opis")</th>
                    <th>@Html.DisplayName("Max učešća")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.Discipline)
                {
                    <tr>
                        <td>@d.Naziv</td>
                        <td>@d.Opis</td>
                        <td>@d.MaxUcesnika</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Ne postoje discipline za ovo takmičenje.</p>
    }
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Uredi</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Obriši</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Nazad na listu</a>
</p>
