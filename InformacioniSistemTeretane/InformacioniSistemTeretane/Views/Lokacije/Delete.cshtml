@model InformacioniSistemTeretane.Models.Lokacija

<h1>Obriši lokaciju</h1>
<h3>Jeste li sigurni?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Naziv)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Naziv)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Adresa)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Adresa)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.KontaktTelefon)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.KontaktTelefon)</dd>
        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
</form>