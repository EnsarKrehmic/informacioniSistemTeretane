@model InformacioniSistemTeretane.Models.Lokacija

@{
    ViewData["Title"] = "Detalji lokacije";
    bool imaSale = Model.Sale?.Any() ?? false;
    bool imaIgraonice = Model.Igraonice?.Any() ?? false;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Detalji lokacije</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">@Model.Naziv</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Naziv)</dt>
                <dd class="col-sm-8">@Model.Naziv</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Adresa)</dt>
                <dd class="col-sm-8">@Model.Adresa</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.KontaktTelefon)</dt>
                <dd class="col-sm-8">@Model.KontaktTelefon</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email)</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Broj sala</dt>
                <dd class="col-sm-8">@(Model.Sale?.Count ?? 0)</dd>

                <dt class="col-sm-4">Broj igraonica</dt>
                <dd class="col-sm-8">@(Model.Igraonice?.Count ?? 0)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-end">
                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit"></i> Uredi
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Obriši
                    </a>
                }
            </div>
        </div>
    </div>

    @if (imaSale)
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Sale na ovoj lokaciji</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var sala in Model.Sale)
                    {
                        <li class="list-group-item">
                            <strong>@sala.Naziv</strong> - Kapacitet: @sala.Kapacitet osoba
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    @if (imaIgraonice)
    {
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Igraonice na ovoj lokaciji</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var igraonica in Model.Igraonice)
                    {
                        <li class="list-group-item">
                            <strong>@igraonica.Naziv</strong> - Kapacitet: @igraonica.Kapacitet
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>