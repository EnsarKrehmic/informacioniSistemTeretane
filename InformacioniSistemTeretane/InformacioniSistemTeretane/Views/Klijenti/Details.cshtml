@model InformacioniSistemTeretane.Models.Klijent

@{
    ViewData["Title"] = "Detalji klijenta";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Detalji klijenta</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">@Model.Ime @Model.Prezime</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Ime)</dt>
                <dd class="col-sm-8">@Model.Ime</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Prezime)</dt>
                <dd class="col-sm-8">@Model.Prezime</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DatumRodjenja)</dt>
                <dd class="col-sm-8">@Model.DatumRodjenja.ToShortDateString() (@(DateTime.Now.Year - Model.DatumRodjenja.Year) godina)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(m => m.UserId)</dt>
                <dd class="col-sm-8">@Model.User?.UserName</dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-end">
                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit"></i> Uredi
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Obriši
                    </a>
                }
            </div>
        </div>
    </div>
</div>