@model InformacioniSistemTeretane.Models.Licenca

@{
    ViewData["Title"] = "Detalji licence";
    var status = Model.ValidnaDo < DateTime.Now ? "Istekla" : "Aktivna";
    var badgeClass = status == "Aktivna" ? "badge bg-success" : "badge bg-secondary";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Detalji licence</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Nazad
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Licenca za: @Model.Klijent?.Prezime, @Model.Klijent?.Ime</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Klijent</dt>
                <dd class="col-sm-8">@Model.Klijent?.Prezime, @Model.Klijent?.Ime</dd>

                <dt class="col-sm-4">Program</dt>
                <dd class="col-sm-8">@Model.Program?.Naziv</dd>

                <dt class="col-sm-4">Datum izdavanja</dt>
                <dd class="col-sm-8">@Model.DatumIzdavanja.ToShortDateString()</dd>

                <dt class="col-sm-4">Vrijedi do</dt>
                <dd class="col-sm-8">@Model.ValidnaDo.ToShortDateString()</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8"><span class="@badgeClass">@status</span></dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-end">
                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="fas fa-edit"></i> Uredi
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Obriši
                    </a>
                }
            </div>
        </div>
    </div>
</div>