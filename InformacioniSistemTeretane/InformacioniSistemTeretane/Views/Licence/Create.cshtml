@model InformacioniSistemTeretane.Models.Licenca

@{
    ViewData["Title"] = "Nova licenca";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="KlijentId"></label>
        <select asp-for="KlijentId" class="form-control" asp-items="ViewBag.KlijentId"></select>
        <span asp-validation-for="KlijentId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ProgramId"></label>
        <select asp-for="ProgramId" class="form-control" asp-items="ViewBag.ProgramId"></select>
        <span asp-validation-for="ProgramId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DatumIzdavanja" class="form-label"></label>
        <input asp-for="DatumIzdavanja" type="date" class="form-control" />
        <span asp-validation-for="DatumIzdavanja" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ValidnaDo" class="form-label"></label>
        <input asp-for="ValidnaDo" type="date" class="form-control" />
        <span asp-validation-for="ValidnaDo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spremi</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
