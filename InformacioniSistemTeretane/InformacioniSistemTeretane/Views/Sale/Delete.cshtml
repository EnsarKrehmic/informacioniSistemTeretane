@model InformacioniSistemTeretane.Models.Sala

<h1>Obriši salu</h1>
<h3>Jeste li sigurni?</h3>

<dl class="row">
    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Naziv)</dt>
    <dd class="col-sm-8">@Model.Naziv</dd>

    <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Kapacitet)</dt>
    <dd class="col-sm-8">@Model.Kapacitet</dd>

    <dt class="col-sm-4">Lokacija</dt>
    <dd class="col-sm-8">@Model.Lokacija?.Naziv</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
</form>
