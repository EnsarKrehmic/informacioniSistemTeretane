@model InformacioniSistemTeretane.Models.IgraonicaPonuda

@{
    ViewData["Title"] = "Detalji ponude igraonice";
}

<div class="card shadow border-0">
    <div class="card-header bg-primary text-white py-3">
        <h2 class="mb-0">
            <i class="bi bi-info-circle me-2"></i>@ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Igraonica</dt>
                    <dd class="col-sm-8">@Model.Igraonica?.Naziv</dd>

                    <dt class="col-sm-4">Usluga</dt>
                    <dd class="col-sm-8">@Model.OpisUsluge</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Cijena</dt>
                    <dd class="col-sm-8">@Model.Cijena.ToString("C")</dd>

                    <dt class="col-sm-4">Trajanje</dt>
                    <dd class="col-sm-8">@Model.Trajanje.ToString(@"hh\:mm")</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Nazad na listu
            </a>
            <div>
                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-warning me-2">
                        <i class="bi bi-pencil me-2"></i>Uredi
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                       class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Obriši
                    </a>
                }
            </div>
        </div>
    </div>
</div>