@model IEnumerable<InformacioniSistemTeretane.Models.IgraonicaPonuda>
@using InformacioniSistemTeretane.Models

@{
    ViewData["Title"] = "Ponude igraonice";
}

<div class="card shadow border-0 mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="mb-0">
                    <i class="bi bi-joystick me-2"></i>@ViewData["Title"]
                </h2>
            </div>
            <div class="col-md-6 text-end">
                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                {
                    <a asp-action="Create" class="btn btn-light">
                        <i class="bi bi-plus-circle me-2"></i>Nova ponuda
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (TempData["Uspjeh"] != null)
        {
            <div class="alert alert-success mb-0 rounded-0">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Uspjeh"]
            </div>
        }
        @if (TempData["Greska"] != null)
        {
            <div class="alert alert-danger mb-0 rounded-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Greska"]
            </div>
        }

        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Igraonica</th>
                        <th>Usluga</th>
                        <th>Cijena</th>
                        <th>Trajanje</th>
                        <th class="text-end">Akcije</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Igraonica?.Naziv</td>
                            <td>@item.OpisUsluge</td>
                            <td>@item.Cijena.ToString("C")</td>
                            <td>@item.Trajanje.ToString(@"hh\:mm")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-primary" title="Detalji">
                                    <i class="bi bi-eye"></i>
                                </a>

                                @if (User.IsInRole("Admin") || User.IsInRole("Zaposlenik"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-warning ms-1" title="Uredi">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger ms-1" title="Obriši">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light py-3">
        <div class="text-muted small">
            Ukupno ponuda: @Model.Count()
        </div>
    </div>
</div>