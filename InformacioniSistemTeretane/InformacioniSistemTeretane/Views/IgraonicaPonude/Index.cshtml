@model IEnumerable<InformacioniSistemTeretane.Models.IgraonicaPonuda>
@using InformacioniSistemTeretane.Models

<h1>Ponude igraonice</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Nova ponuda</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor((IgraonicaPonuda m) => m.IgraonicaId)</th>
            <th>Igraonica</th>
            <th>@Html.DisplayNameFor((IgraonicaPonuda m) => m.OpisUsluge)</th>
            <th>@Html.DisplayNameFor((IgraonicaPonuda m) => m.Cijena)</th>
            <th>@Html.DisplayNameFor((IgraonicaPonuda m) => m.Trajanje)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IgraonicaId</td>
                <td>@item.Igraonica?.Naziv</td>
                <td>@item.OpisUsluge</td>
                <td>@Html.DisplayFor(mi => item.Cijena)</td>
                <td>@item.Trajanje.ToString(@"hh\:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
