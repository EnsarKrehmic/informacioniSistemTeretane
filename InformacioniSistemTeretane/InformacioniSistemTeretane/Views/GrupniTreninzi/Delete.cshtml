@model InformacioniSistemTeretane.Models.GrupniTrening

@{
    ViewData["Title"] = "Obriši grupni trening";
}

<div class="card shadow border-0">
    <div class="card-header bg-danger text-white py-3">
        <h2 class="mb-0">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        @if (TempData["Greska"] != null)
        {
            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Greska"]
            </div>
        }

        <div class="alert alert-warning">
            <h5 class="alert-heading">Upozorenje!</h5>
            <p class="mb-0">
                Jeste li sigurni da želite obrisati ovaj grupni trening? Ova radnja je nepovratna.
            </p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Naziv treninga</dt>
                    <dd class="col-sm-8">@Model.Naziv</dd>

                    <dt class="col-sm-4">Sala</dt>
                    <dd class="col-sm-8">@Model.Sala?.Naziv</dd>

                    <dt class="col-sm-4">Trener</dt>
                    <dd class="col-sm-8">
                        @Model.Trener?.Zaposlenik?.Prezime, @Model.Trener?.Zaposlenik?.Ime
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Datum</dt>
                    <dd class="col-sm-8">@Model.Datum.ToString("dd.MM.yyyy")</dd>

                    <dt class="col-sm-4">Vrijeme</dt>
                    <dd class="col-sm-8">@Model.Vrijeme.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-4">Maks. učesnika</dt>
                    <dd class="col-sm-8">@Model.MaxUcesnika</dd>
                </dl>
            </div>
        </div>

        <!-- Prikaz vezanih rezervacija -->
        @if (Model.Rezervacije?.Any() == true)
        {
            <div class="alert alert-danger mt-4">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>Ovaj trening ima vezane rezervacije!
                </h6>
                <p class="mb-0">
                    Brisanje nije moguće dok postoje aktivne rezervacije.
                    Broj rezervacija: <span class="fw-bold">@Model.Rezervacije.Count</span>
                </p>
            </div>
        }

        <!-- Prikaz vezanih prisustava -->
        @if (Model.Prisustva?.Any() == true)
        {
            <div class="alert alert-danger mt-3">
                <h6 class="alert-heading">
                    <i class="bi bi-exclamation-octagon-fill me-2"></i>Ovaj trening ima vezana prisustva!
                </h6>
                <p class="mb-0">
                    Brisanje nije moguće dok postoje evidencije prisustva.
                    Broj prisustava: <span class="fw-bold">@Model.Prisustva.Count</span>
                </p>
            </div>
        }
    </div>
    <div class="card-footer bg-light">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Nazad na listu
                </a>

                @if ((Model.Rezervacije == null || !Model.Rezervacije.Any()) &&
                                (Model.Prisustva == null || !Model.Prisustva.Any()))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Potvrdi brisanje
                    </button>
                }
            </div>
        </form>
    </div>
</div>